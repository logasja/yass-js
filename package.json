{
  "name": "jpeg-js",
  "version": "0.6.0-development",
  "description": "A pure javascript JPEG encoder and decoder",
  "main": "lib/index.js",
  "types": "lib/index.type.ds",
  "scripts": {
    "build": "tsc",
    "test": "mocha -r ts-node/register test/*.spec.ts",
    "test:jpeg": "mocha -r ts-node/register test/jpeg.spec.ts",
    "test:qim": "mocha -r ts-node/register test/qim.spec.ts",
    "test:repeat_accumulation": "mocha -r ts-node/register test/repeat_accumulation.spec.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.gatech.edu/spud/jpeg-js"
  },
  "keywords": [
    "jpeg",
    "jpg",
    "encoder",
    "decoder",
    "codec",
    "image",
    "javascript",
    "js"
  ],
  "author": "Eugene Ware <eugene@noblesamurai.com>",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.gatech.edu/spud/jpeg-js/issues"
  },
  "dependencies": {
    "seededshuffle": "^0.2.0",
    "seedrandom": "^3.0.5"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.0.24",
    "@types/seededshuffle": "^0.2.0",
    "chai": "^4.2.0",
    "husky": "^4.2.5",
    "jest": "^25.4.0",
    "lint-staged": "^10.2.11",
    "mocha": "^8.0.1",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write"
    ],
    "*.js": [
      "prettier --write"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true
  }
}
